<link rel="stylesheet" type="text/css" href="/css/dataTables.bootstrap.min.css">
<link rel="stylesheet" href="/css/jquery.dataTables.min.css">

    <!-- Diseases manager -->
    <div class="col-md-4 col-lg-4" style="padding-right: 30px; padding-left: 30px;">
         <div class="row">
            <!-- Add new disease -->
            <h4 style="margin-top: 0px;">Добавить заболевание</h4>
            <form action="/app/adddisease" method="post">
                <div class="form-group row">
                    <label class="col-sm-5 col-md-5 col-lg-5 col-form-label">Название заболевания</label>
                    <div class="col-sm-7 col-md-7 col-lg-7">
                        <input class="form-control" style="width: 100%;" type="text" name="diseaseName" required="true" placeholder="Ввести название заболевания...">
                    </div>
                </div>

                <!-- Last name input -->
                <div class="form-group row">
                    <label class="col-sm-5 col-md-5 col-lg-5 col-form-label">Индекс активности</label>
                    <div class="col-sm-7 col-md-7 col-lg-7">
                        <input class="form-control" style="width: 100%;" type="number" name="diseaseScore" required="true" placeholder="Ввести индекс активности заболевания...">
                    </div>
                </div>

            	<input class="btn btn-success" style="float: right;" type="Submit" name="Submit" value="Добавить">
            </form>
        </div>

        <hr style="border-top: dotted 1px;" />

        <div class="row">
        <!-- Delete diseases -->
            <h4 style="margin-top: 0px;">Удалить заболевание</h4>
            <form action="/app/deletediseases" method="post">
                <table id="diseases-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <!-- JavaScript works here! -->
                </table>
<br>
                <input class="btn btn-danger" style="float: right;" type="Submit" name="Submit" value="Удалить">
            </form>
        </div>
    </div>


    <!-- Rooms manage -->
    <div class="col-md-4 col-lg-4" style="padding-right: 30px; padding-left: 30px;">
        <!-- Add new room -->
        <div class="row">
            <h4 style="margin-top: 0px;">Добавить палату</h4>
            <form action="/app/addroom" method="post">
                <div class="form-group row">
                    <label class="col-sm-5 col-md-5 col-lg-5 col-form-label">Название палаты</label>
                    <div class="col-sm-7 col-md-7 col-lg-7">
                        <input class="form-control" style="width: 100%;" type="text" name="roomName" required="true" placeholder="Введите название...">
                    </div>
                </div>

            	<input class="btn btn-success" style="float: right;" type="Submit" name="Submit" value="Добавить">
            </form>
        </div>

        <hr style="border-top: dotted 1px;" />

        <!-- Delete rooms -->
        <div class="row">
            <h4 style="margin-top: 0px;">Удалить палату</h4>
            <form action="/app/deleterooms" method="post">
                <table id="rooms-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <!-- JavaScript works here! -->
                </table><br>
                <input class="btn btn-danger" style="float: right;" type="Submit" name="Submit" value="Удалить">
            </form>
        </div>
    </div>


   <div class="col-md-4 col-lg-4" style="padding-right: 30px; padding-left: 30px;">
        <div class="row">
             <h4 style="margin-top:0px">Добавить нового пользователя</h4>
             <form method="post" action="/app/adduser" center="true">
                 <div class="form-group row">
                     <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Имя пользователя</label>
                     <div class="col-sm-9 col-md-9 col-lg-9">
                          <input class="form-control" style="width: 100%;" type="text" name="username" required="true" placeholder="Введите имя...">
                     </div>
                 </div>
                 <div class="form-group row">
                     <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Пароль</label>
                     <div class="col-sm-9 col-md-9 col-lg-9">
                          <input class="form-control" style="width: 100%;" type="password" name="password" required="true" placeholder="Введите пароль...">
                     </div>
                 </div>
                 <button type="submit" style="float: right;" class="btn btn-primary">Добавить</button>
             </form>
        </div>
   </div>


<script type="text/javascript" src="/js/jquery.dataTables.min.js"></script>
